#!/bin/env bash

# Function to get DNS record information
get_dns_info() {
    local domain=$1
    local subdomain=$2
    local fqdn="${subdomain}.${domain}"

    # Use dig to get the DNS record
    local record_info=$(dig +short ${fqdn})

    if [[ -z $record_info ]]; then
        echo "The subdomain ${subdomain} does not exist."
    else
        echo "The subdomain ${subdomain} is an A record and points to ${record_info}"
    fi
}

# Function to display information for default subdomains
display_default_subdomains() {
    local domain=$1

    get_dns_info $domain "www"
    get_dns_info $domain "lb-01"
    get_dns_info $domain "web-01"
    get_dns_info $domain "web-02"
}

# Main script logic
if [[ -z $1 ]]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

domain=$1
subdomain=$2

if [[ -z $subdomain ]]; then
    display_default_subdomains $domain
else
    get_dns_info $domain $subdomain
fi
